[Unit]
Description=E-commerce Flask Application
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/ecommerce-app
Environment="PATH=/home/ubuntu/ecommerce-app/venv/bin"
ExecStart=/home/ubuntu/ecommerce-app/venv/bin/gunicorn -w 4 -b 127.0.0.1:8000 run:app
Restart=always

[Install]
WantedBy=multi-user.target 